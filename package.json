{
  "name": "@bookreview/backend",
  "version": "1.0.0",
  "main": "build/index.js",
  "scripts": {
    "type:gen": "npx openapi-typescript ./openapi.yaml -o src/types/openapi.ts --root-types",
    "types:clean": "npx ts-node src/types/generator-util.ts",
    "gen:types": "npm run type:gen && npm run types:clean ",
    "lint": "eslint ./src --ext .js,.ts",
    "lint:fix": "npm run lint -- --fix",
    "watch-build": "tsc -w",
    "watch-start": "nodemon --delay 2 -w build/ -x 'npm run start'",
    "dev": "concurrently -k -p '[{name}]' -n 'typescript,api' -c 'yellow.bold,cyan.bold' npm:watch-build npm:watch-start",
    "start": "sls offline --httpPort 3001 start"
  },
  "dependencies": {
    "@hapi/boom": "^10.0.1",
    "aws-lambda": "^1.0.7",
    "axios": "^1.7.7",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.3",
    "chance": "^1.1.12",
    "concurrently": "^9.0.1",
    "copyfiles": "^2.4.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^5.9.2",
    "mongoose": "^8.7.2",
    "nodemon": "^3.1.7",
    "openapi-backend": "^5.11.0",
    "pino": "^9.4.0"
  },
  "devDependencies": {
    "@toaha/eslint-config": "github:toahabhuiyan01/eslint-config-ts",
    "@types/aws-lambda": "^8.10.145",
    "@types/bcryptjs": "^2.4.6",
    "@types/chance": "^1.1.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.7",
    "eslint": "^9.11.0",
    "openapi-typescript": "^7.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.7.0",
    "serverless": "^3.28.1",
    "serverless-dotenv-plugin": "^4.0.2",
    "serverless-offline": "^12.0.4",
    "serverless-offline-scheduler": "^0.5.0",
    "serverless-plugin-typescript": "^2.1.4"
  }
}